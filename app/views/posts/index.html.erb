<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <span class="timestamp">at <%= l post.created_at %></span>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.intro %></td>
        <td><%= link_to 'Show', post %></td>
        <td>
          <% if policy(post).update? %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <% end %>
        </td>
        <td>
          <% if policy(post).delete? %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(Post).create? %>
  <%= link_to 'New Post', new_post_path, class: "button radius"%>
<% end %>
