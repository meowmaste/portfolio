<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p id="author">
	<b>By:</b>
	<%= @post.author.email %>
</p>

<p id="status">
	<b>Status:</b>
	<%= @post.published? ? "Published" : "Unpublished" %>
</p>

<h3>Comments:</h3>
<% @comments.each do |c| %>
<p> <%= c.content %>
	<% unless c.approved? %>
	<%= link_to "Approve", approve_post_comment_path(@post, c), method: :post %>
	<% end %>

</p>
<% end %>
<%= render "comments/form" %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
